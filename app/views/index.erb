<div class="jumbotron">
  <h1>FlashCards App</h1>
  <p class="lead">Sign up to track your progress!</p>
  <a class="btn btn-large btn-success" href="/signup">Sign up today</a>
</div>

<hr>

<div class="row-fluid marketing">
  <div class="span6">
    <% @decks[1..(@decks.size/2)].each do |deck| %>
    <h4><a href="/round/new/deck/<%=deck.id%>"><%=deck.title%></a></h4>
    <p><%=deck.description%></p>
    <% end %>
  </div>

  <div class="span6">
    <% @decks[(@decks.size/2 + 1)..-1].each do |deck| %>
    <h4><a href="/round/new/deck/<%=deck.id%>"><%=deck.title%></a></h4>
    <p><%=deck.description%></p>
    <% end %>
  </div>
</div>


